@model IEnumerable<BAITAPLON.Models.DonHang>

@{
    ViewBag.Title = "Đơn Hàng Index";
    Layout = "~/Areas/Admin/Views/Shared/conga.cshtml";
}
<br />

<h2>Thông tin các đơn Hàng</h2>



<p>
    <a class="btn btn-danger" href="~/Admin/DonHangs/Create">  Tạo đơn mới   </a>
</p>

<table class="table">
    <tr>
        <th>
            Tên Khách Hàng
        </th>
        <th>
            Liên Hệ
        </th>
        <th>
            Giới Tính
        </th>
        <th>
            Phương thức nhận hàng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CachNhan)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
